extra_dist {
	eval.c
	ffi_table
	getReference.c
}

# This is an explicit rule. The dependency filenames will be resolved by
# first looking in the current directory and then in the project source root.
# The target filename is prepended with the current directory, unless it is
# already relative to the source root. Explicit rules do not have $*, since
# no matching is performed. Using it is an error.
export
		ffi_table.h: ffi_table {
			$< > $@
		}
