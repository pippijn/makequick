include Sources.am

$(SRCDIR)/Sources.am: $(wildcard $(SRCDIR)/*_t.cc) $(SRCDIR)/Rules.am
	$(AM_V_GEN)(for i in $(SRCDIR)/*_t.cc; do		\
		T=`echo $$i | sed -e 's|^$(SRCDIR)/||;s|\.cc$$||'`;	\
		echo "check_PROGRAMS += $$T";			\
		echo "TESTS += $$T";				\
		echo "$${T}_SOURCES = $(CURDIR)/$$T.cc";	\
		echo "$${T}_LDADD = libmakepp.a";		\
		echo;						\
	done) > $@
