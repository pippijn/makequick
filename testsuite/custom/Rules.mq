program datagen {
	# multi-rule:
	{include src}/foo.{c h}: src/foo.data {
		./datagen -foo $< $*
	}

	# additional dependencies:
	include/cow.{c h}: src/cow.data src/foo.data {
		./datagen -foo $< $*
	}

	# 2 alternatives for pattern rules with equal semantics:
	include/%.c
	include/%.h: src/%.data {
		./datagen $< $*
	}
	include/%.{c h}: src/%.data {
		./datagen $< $*
	}
}
